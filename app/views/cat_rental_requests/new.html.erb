<h2>Create Cat Rental Request Form</h2>

<form action="<%= cat_rental_requests_url %>" method="post">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">
         
  <label for="cat_rental_request_cat_id">Desired cat</label>
  <select name="cat_rental_request[cat_id]" id="cat_rental_request_cat_id">
    <option></option>
    <% @cats.each do |cat| %>
    <option value=<%= cat.id %>><%= cat.name %></option>
    <% end %>
  </select>
  <br>
  <br>
  
  <label for="cat_rental_request_start_date">Start date</label>
  <input name="cat_rental_request[start_date]" id="cat_rental_request_start_date" type="date">
  <br>
  <br>
  
  <label for="cat_rental_request_end_date">End date</label>
  <input name="cat_rental_request[end_date]" id="cat_rental_request_end_date" type="date">
  <br>
  <br>
  
  <input type="submit" value="Submit">
</form>