<h2><%= @cat.name + "'s Vital Info" %></h2>
<table border="2">
  <tr>
    <td>Name</td>
    <td><%= @cat.name %></td>
  </tr>
  <tr>
    <td>Age</td>
    <td><%= @cat.age %></td>
  </tr>
  <tr>
    <td>Birthdate</td>
    <td><%= @cat.birth_date %></td>
  </tr>
  <tr>
    <td>Color</td>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Sex</td>
    <td><%= @cat.sex %></td>
  </tr>
</table>
<br>

<h3>Rental Requests</h3>
<table border="2">
  <tr>
    <td>Start date</td>
    <td>End date</td>
    <td>Status</td>
    <% if @cat.owner == current_user %>
    <td>Approve?</td>
    <td>Deny?</td>
    <% end %>
  </tr>
  <% @cat.rental_requests.each do |request| %>
  <tr>
    <td>&nbsp;&nbsp;<%= request.start_date %>&nbsp;&nbsp;</td>
    <td>&nbsp;&nbsp;<%= request.end_date %>&nbsp;&nbsp;</td>
    <td>&nbsp;&nbsp;<%= request.status %>&nbsp;&nbsp;</td>
    <% if request.pending? && @cat.owner == current_user %>
    <td>
      <%= button_to "Approve", "/cat_rental_requests/#{request.id}/approve", :method => :put %>
    </td>
    <td>
      <%= button_to "Deny", "/cat_rental_requests/#{request.id}/deny", :method => :put %>
    </td>
    <% end %>
  </tr>
  <% end %>
</table>